{
	"name": "@google-awlt/design-system",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"sideEffects": [
		"**/*.css"
	],
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"import": "./src/index.ts",
			"require": "./src/index.ts"
		},
		"./styles.css": "./src/styles.css",
		"./*": {
			"import": "./src/components/*/index.tsx",
			"require": "./src/components/*/index.tsx"
		}
	},
	"scripts": {
		"build:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css",
		"build:components": "tsc",
		"check-types": "tsc --noEmit",
		"dev:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css --watch",
		"dev:components": "tsc --watch",
		"dev": "concurrently pnpm run \"dev:styles\" \"pnpm run dev:components\"",
		"build": "npm run build:styles & npm run build:components",
		"lint": "eslint src --max-warnings 0",
		"format": "prettier . --write",
		"test": "jest --config='tests/jest.config.js'"
	},
	"dependencies": {
		"@assistant-ui/react": "0.11.41",
		"@assistant-ui/react-markdown": "^0.11.4",
		"@assistant-ui/react-syntax-highlighter": "^0.11.4",
		"@radix-ui/react-slot": "^1.2.3",
		"@radix-ui/react-tabs": "^1.1.13",
		"@radix-ui/react-tooltip": "^1.2.8",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"react-syntax-highlighter": "^16.1.0",
		"remark-gfm": "^4.0.1",
		"tailwind-merge": "^3.3.1"
	},
	"peerDependencies": {
		"lucide-react": "^0.379.0",
		"react": "^19"
	},
	"devDependencies": {
		"@babel/plugin-transform-react-jsx": "^7.27.1",
		"@babel/preset-env": "^7.28.5",
		"@babel/preset-react": "^7.28.5",
		"@babel/preset-typescript": "^7.28.5",
		"@google-awlt/shared-config": "workspace:*",
		"@storybook/react-vite": "^9.1.3",
		"@tailwindcss/cli": "^4.1.5",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/jest": "^29.5.14",
		"@types/react": "^19.1.0",
		"@types/react-syntax-highlighter": "^15.5.13",
		"babel-jest": "^30.2.0",
		"concurrently": "^9.2.1",
		"eslint": "^9.33.0",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^30.1.2",
		"jest-extended": "^7.0.0",
		"node-fetch": "^3.3.2",
		"prettier": "^3.6.2",
		"tailwindcss": "^4.1.5",
		"typescript": "5.9.2"
	}
}
