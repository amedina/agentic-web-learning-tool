{
	"extends": "@google-awlt/shared-config/typescript/react-library",
	"compilerOptions": {
		"allowJs": true,
    	"checkJs": true,
		"outDir": "./dist",
		"lib": ["dom", "ES2015"],
		"sourceMap": true,
		"noEmit": false,
		"allowImportingTsExtensions": false,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"typeRoots": ["./node_modules/@types"],
		"types": ["jest"]
	},
	"include": ["src", "storybook.d.ts", "node_modules/jest-extended/types/index.d.ts"],
	"exclude": ["dist", "build", "node_modules", "tests"]
}