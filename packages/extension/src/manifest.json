{
	"name": "Agentic Web Learning Tool",
	"description": "Tooling for understanding Agentic Web",
	"version": "0.0.0",
	"manifest_version": 3,
	"icons": {
		"16": "icons/icon-16.png",
		"32": "icons/icon-32.png",
		"48": "icons/icon-48.png",
		"128": "icons/icon-128.png"
	},
	"incognito": "split",
	"permissions": [
		"storage",
		"tabs",
		"webNavigation",
		"webRequest",
		"cookies",
		"debugger",
		"management",
		"contentSettings",
		"scripting",
		"sidePanel"
	],
	"host_permissions": ["*://*/*"],
	"devtools_page": "devtools/devtools.html",
	"options_page": "options/options.html",
	"action": {
    	"default_title": "Click to open panel"
  	},
	"side_panel": {
		"default_path": "sidePanel/sidePanel.html"
	},
	"background": {
		"service_worker": "serviceWorker/serviceWorker.js",
		"type": "module"
	},
	"content_scripts": [
		{
			"js": ["contentScript.js"],
			"matches": ["*://*/*"]
		}
	]
}
