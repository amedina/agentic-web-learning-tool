{
	"extends": "@google-awlt/shared-config/typescript/react-library",
	"compilerOptions": {
		"jsx": "react-jsx",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"typeRoots": ["./node_modules/@types"],
		"types": ["jest", "chrome"],
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src", "tests/setupTests.d.ts", "node_modules/jest-extended/types/index.d.ts", "node_modules/@types/chrome/index.d.ts"],
	"exclude": ["dist", "build", "tests", "node_modules"]
}